{% extends '_layout' %}

{% block main %}

<section class="blog_banner_area about_banner_area single_post titlebar">
        <div class="container">
            <div class="banner-content wow fadeInUp">
                <h1 class="page-cover-tittle"> {{entry.title}}</h1>
                <h2> {{entry.blogIntroduction}}</h2>
            </div>
        </div>
