                                                <textarea name="comment" class="form-control" placeholder="Your Comment"></textarea>
                                            </div>
                                            <div class="col-sm-12 col-xs-12">
                                                <p class="form-submit"><input name="submit" type="submit" id="submit" class="btn sub_btn" value="Post Comment" /></p>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </section>
